        const rows = Array.from(tableBody.querySelectorAll('tr')); // All rows

        // Sort rows based on the selected column
        rows.sort((rowA, rowB) => {
    const cellA = rowA.cells[columnIndex].textContent.trim();
    const cellB = rowB.cells[columnIndex].textContent.trim();

    // Extract numeric values (for columns like "item-49")
    const numericA = cellA.match(/\d+/) ? parseInt(cellA.match(/\d+/)[0], 10) : cellA;
    const numericB = cellB.match(/\d+/) ? parseInt(cellB.match(/\d+/)[0], 10) : cellB;

    // Check if the column contains time-like values (e.g., "2024-11-15 09:30")
    const dateA = Date.parse(cellA);
    const dateB = Date.parse(cellB);

    if (this.getAttribute('data-name')=="name") {
        // Numeric sorting (for "item-49", etc.)
        return sortOrder === 'asc' ? numericA - numericB : numericB - numericA;
    } else if (this.getAttribute('data-name') == "time") {
        // Date (time) sorting for columns like "Setup Start", "Setup End"
        return sortOrder === 'asc' ? dateA - dateB : dateB - dateA;
    } else {
        // Default to string-based sorting
        return sortOrder === 'asc' 
            ? cellA.localeCompare(cellB)
            : cellB.localeCompare(cellA);
    }
});



        // Update the sorting order for the button
        this.setAttribute('data-order', sortOrder === 'asc' ? 'desc' : 'asc');

